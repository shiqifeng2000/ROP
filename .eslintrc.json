{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    "no-unused-vars": 1,
    "no-const-assign": 1,
    "no-this-before-super": 1,
    "no-unreachable": 1,
    "no-undef": 1,
    "constructor-super": 1,
    "valid-typeof": 1,
    // allow paren-less arrow functions
    "arrow-parens": 0,
    "quotes": 0,
    // allow async-await
    "generator-star-spacing": 0,
    "camelcase": 0,
    //"spaced-comment": ["error", "always", { "markers": ["/"] }],
    "spaced-comment": 0,
    "eqeqeq": 0,
    "no-useless-return": 0,
    "one-var": 0,
    "no-cond-assign": 0,
    "no-mixed-operators": 1,
    "no-redeclare": 1,
    "no-sequences": 1,
    "no-new-wrappers": 1,
    "no-useless-call": 1,
    "no-unused-expressions": 1,
    "no-use-before-define": 1,
    "no-useless-escape": 1,
    "no-extend-native": 1,
    "comma-spacing": 1,
    "semi": 1,
    "indent": 0,
    "comma-dangle": 1,
    "brace-style": 1,
    "block-spacing": 1,
    "space-before-function-paren": 0,
    "eol-last": 0,
    // allow debugger during development
    "no-debugger": 0
  }
}
