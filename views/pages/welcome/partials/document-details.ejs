<div class="header">
    <h4 ng-bind="detail.doc_name" style="max-width: 650px;"></h4>
    <span flex></span>
    <h5 class=" pr-10"><small class="pl-10"><%= __('Welcome.docdetail.views') %><span ng-bind="detail.view_count"></span></small></h5>
    <md-button class="md-raised md-primary text fill cliper" aria-label="Copy Text" ng-click="triggerClip()" data-clipboard-text="{{docUrl}}" >
        <span ng-bind="clipboardHints"></span>
    </md-button>
</div>
<div class="content" ng-if="detail">
    <div compile content="detail.doc_content" imageresizer="imageresizer" ng-if="detail.doc_content && detail.doc_content !== '<div>  <br /> </div>' "></div>
    <div id="{{'content_'+content.sort_id}}" class="content-list" ng-repeat="content in detail.content_list track by $index">
        <h5 ng-bind="content.content_title" class="anchor"></h5>
        <div compile content="content.content_desc" imageresizer="imageresizer"></div>
    </div>
</div>
<div class="app-loading" ng-if="refreshing">
    <md-progress-circular md-mode="indeterminate"></md-progress-circular>
</div>
